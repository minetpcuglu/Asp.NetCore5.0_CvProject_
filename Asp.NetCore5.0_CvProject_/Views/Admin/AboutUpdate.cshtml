@model About
@{
    ViewData["Title"] = "AboutUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<h2>Profil Düzenleme Sayfası</h2>
<br />
<form method="post" asp-controller="Admin" asp-action="AboutUpdate">
    <input type="hidden" name="AboutId" value="@Model.AboutId" />
    <div class="form-group">
        <label asp-for="Name"> <b>İsim:</b></label>
        <input asp-for="Name" class="form-control" value="@Model.Name" />
        @*<span asp-validation-for="CName" class="text-danger"></span>*@
    </div>

    <div class="form-group">
        <label asp-for="SurName"> <b>Soyisim:</b></label>
        <input asp-for="SurName" class="form-control" value="@Model.SurName" />
        @*<span asp-validation-for="CName" class="text-danger"></span>*@

    </div> <div class="form-group">
        <label asp-for="Mail"> <b>E-Mail:</b></label>
        <input asp-for="Mail" class="form-control" value="@Model.Mail" />
        @*<span asp-validation-for="CName" class="text-danger"></span>*@

    </div> <div class="form-group">
        <label asp-for="TelephoneNumber"> <b>Telefon:</b></label>
        <input asp-for="TelephoneNumber" class="form-control" value="@Model.TelephoneNumber" />
        @*<span asp-validation-for="CName" class="text-danger"></span>*@
    </div>

    <div class="form-group">
        <label asp-for="Adress"> <b>Adres:</b></label>
        <input asp-for="Adress" class="form-control" value="@Model.Adress" />
        @*<span asp-validation-for="CName" class="text-danger"></span>*@
    </div>

    <div class="form-group">
        <label asp-for="ImagePath"> <b>Resim:</b></label>
        <input  asp-for="ImagePath" class="form-control" value="@Model.ImagePath" />
        @*<span asp-validation-for="CName" class="text-danger"></span>*@
    </div>

    <div class="form-group">
        <label asp-for="DipNot"> <b>Kendinden Bahset:</b></label>
        <textarea asp-for="DipNot" class="form-control" value="@Model.DipNot" ></textarea> 
        @*<span asp-validation-for="CName" class="text-danger"></span>*@
    </div>

    <button type="submit" class="btn btn-outline-success"><b>Değişiklikleri Kaydet</b></button>
</form>
