@model Experience
@{
    ViewData["Title"] = "ExperienceUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<h2>Profil Düzenleme Sayfası</h2>
<br />
<form method="post" asp-controller="AdminExperience" asp-action="ExperienceUpdate">
    <input type="hidden" name="ExperienceId" value="@Model.ExperienceId" />
    <div class="form-group">
        <label asp-for="Title"> <b>Deneyim:</b></label>
        <input asp-for="Title" class="form-control" value="@Model.Title" />
        @*<span asp-validation-for="CName" class="text-danger"></span>*@
    </div>

    <div class="form-group">
        <label asp-for="Date"> <b>Tarih:</b></label>
        <input asp-for="Date" class="form-control" value="@Model.Date" />
        @*<span asp-validation-for="CName" class="text-danger"></span>*@
    </div>

    <button type="submit" class="btn btn-outline-success"><b>Değişiklikleri Kaydet</b></button>
</form>
