@model IPagedList<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th> Deneyim</th>
        <th> Tarih</th>
        <th> Güncelle</th>




    </tr>

    @foreach (var experience in Model)
    {
        <tr>
            <th>@experience.ExperienceId</th>
            <td>@experience.Title</td>
            <td>@experience.Date</td>


            <td><a href="/AdminExperience/ExperienceUpdate/@experience.ExperienceId" class="btn btn-outline-warning"><b>Güncelle</b></a></td>



        </tr>
    }


</table>

<br />
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
<br />
<a href="/AdminExperience/AddExperience" class="btn btn-outline-dark"> <b>Deneyim Ekle</b></a>

